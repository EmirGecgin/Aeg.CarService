@using Aeg.CarService.Entity.Web;
@{
    ViewBag.Title = "About";
}

@if (ViewBag.About != null)
{
    var about = ViewBag.About as About;
    <style>
        .header-about {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            min-height: 92.2vh;
            background-image: url('@about.Image');
            background-position: center;
            background-size: cover;
            z-index: 100;
        }

        .header-bg {
            background: rgba(0, 0, 0, 0.6);
        }
    </style>
    <section class="header-about ">
        <div class="header-bg">
            <div class="container">
                <div class="content-part row d-flex py-5 text-white text-center px-5">
                    @Html.Raw(about.Motto)
                </div>
            </div>
        </div>
    </section>
    <section class="about-explanation container mt-4">
        <div class="row">
            <div class="col-md-12">
                @Html.Raw(about.Content)
            </div>
        </div>
    </section>
}
<section class="AegCarServiceMap mt-4">
    <div class="container">
        <h1 class="text-center ">Location</h1>
        <div class="row mt-4">
            <div class="col-12">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3957.7349028421363!2d21.436882542452206!3d42.00132441658821!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1724346442225!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</section>
