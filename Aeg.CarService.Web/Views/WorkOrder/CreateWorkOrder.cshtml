
@{
    ViewBag.Title = "Create Work Order";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-6">
        <label>Brand</label>
        @Html.DropDownList("Brand", new SelectList(ViewBag.Brand,"Id","BrandName"),  "Choose Brand", new { @class = "form-control",@required="required",@onchange="FillModel()" })
    </div>
    <div class="col-md-6">
        <label>Model</label>
        <select name="Id" id="ModelId" class="form-control">
            
        </select>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-6">
        <label>Licence Plate</label>
        <input type="text" class="form-control" />
    </div>
    <div class="col-md-6">
        <label>Chassis Number</label>
        <input type="text" class="form-control" />
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-6">
        <label>Fuel Type</label>
        <select name="fuel" class="form-control">
            <option>Gas</option>
            <option>Diesel</option>
            <option>Electric</option>
        </select>
    </div>
    <div class="col-md-6">
        <label>Date of Arrival</label>
        <input type="text" class="form-control" />
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-12">
        <label>Arrival Reason</label>
        <textarea class="form-control"></textarea>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-12 ">
        <input type="submit" class="btn btn-primary float-end" value="Save"/>
    </div>
</div>

<script>
    function FillModel() {
        var brandId = $("#Brand").val();
        //alert(brandId);
        if ($("#Brand").val() == "") {
            $("#ModelId").html("");
            $("#ModelId").append(
                $('<option></option>').val("").html("Choose Model")
            );
        }
        else {
            $.ajax({
                url: "/BrandModel/GetModels",
                type: "GET",
                dataType: "json",
                data: { Id: brandId },
                success: function (models) {
                    $("#ModelId").html("");
                    $.each(models, function (i, model) {
                        $("#ModelId").append($("<option></option>").val(model.Id).html(model.ModelName));
                    });
                }
            });
        }
    }
</script>

