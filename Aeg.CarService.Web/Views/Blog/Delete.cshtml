@model Aeg.CarService.Entity.Web.Blog
@using System.Text.RegularExpressions;
@{
    ViewBag.Title = "Blog Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="border" style="background: #f7f9fa">
    <h4 class="py-2 border-bottom">Are you sure you want to delete this?</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Header)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Header)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @{
                string content = Regex.Replace(Model.Content, "<.*?>", string.Empty);
                if (content.Length > 200)
                {
                    content = content.Substring(0, 200) + "...";
                }
                @content
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Model.Date.ToShortDateString()
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color float-end mt-2">
            <a href="/Blog/Index" class="btn btn-secondary">Back to Blog List</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>
